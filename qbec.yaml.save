apiVersion: qbec.io/v1alpha1
kind: App
metadata:
  name: hahaton
spec:
  environments:
    default:
      defaultNamespace: default
      server: https://127.0.0.1:36577
  vars:
    computed:
      - name: helmTemplate
        code: |
          {
            command: 'helm',
            args: ['template', '--debug',' /home/master/nginx'],
            env: {},
            stdin: '',
          }
      - name: helmShowValues
        code: |
          {
	    command: 'helm'
	    args: ['show','values', '/home/master/nginx']
	    env: {},
	    stdin: '',
          }
      - name: helmShowValues
        code: |
          {
            command: 'helm'
            args: ['show','values', '/home/master/nginx']
            env: {},
            stdin: '',
          }
  dataSources:
    - exec://helm?configVar=helmTemplate
    - exec://values?configVar=helmShowValues
